amends "package://pkg.pkl-lang.org/pkl-project-commons/pkl.impl.circleci@1.1.1#/PklCI.pkl"

prb = buildWorkflow

main = buildWorkflow

jobs {
  ["build"] {
    docker {
      new {
        image = "cimg/openjdk:17.0"
      }
    }
    steps {
      "checkout"
      new RunStep {
        command = "./gradlew --info --stacktrace -DtestReportsDir=${HOME}/test-results check"
      }
      new StoreTestResults { path = "~/test-results" }
    }
  }
  ["do-release"] {
    docker {
      new { image = "maniator/gh:v2.40.1" }
    }
    steps {
      new AttachWorkspaceStep {
        at = "."
      }
      new RunStep {
        name = "gh release"
        command = """
          echo "release"
          """
      }
    }
  }
}

local buildWorkflow = new Workflow {
  jobs {
    "build"
  }
}